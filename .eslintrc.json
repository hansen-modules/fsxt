{
    "parserOptions": {
      "ecmaVersion": 8
    },
    "env": {
      "node": true, // just in case
      "es6": true, // let, const, ``...
      "mocha": true
    },
    "extends": ["eslint:recommended", "google"],
    "rules": {
        "indent": [
            "error",
            2,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 0,
        "require-jsdoc": "off",
        "valid-jsdoc": "off",
        "max-len": "off"
    }
}